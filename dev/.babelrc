{
    "presets": ["es2015", "stage-0", "react"],
    "env": {
        "development": {
            "plugins": [
                ["transform-decorators-legacy"],
                ["react-transform", {
                    "transforms": [{
                        "transform": "react-transform-catch-errors",
                        "imports": ["react", "redbox-react"]
                    }]
                }]
            ]
        },
        "production": {
            "plugins": [
                ["transform-decorators-legacy"],
                ["react-transform", {
                    "transforms": [{
                        "transform": "react-transform-catch-errors",
                        "imports": ["react", "redbox-react"]
                    }]
                }]
            ]
        }
    }
}
